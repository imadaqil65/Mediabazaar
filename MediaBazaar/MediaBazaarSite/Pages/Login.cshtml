@page
@model MediaBazaarSite.Pages.LoginModel
@{
    ViewData["Title"] = "Login page";
}

<div class="login-con">

    <div class="login-header">
        <h1>Login</h1>
    </div>

    <div>
        <h3>@Model.Message</h3>
    </div>

    <form id="Login-form" method="post">
        <span asp-validation-for="loginDTO.Email"></span>
        <input asp-for="loginDTO.Email" type="email" placeholder="email" required/>
        <span asp-validation-for="loginDTO.Password"></span>
        <input asp-for="loginDTO.Password" type="password" placeholder="password" required/>
        <input type="submit" value="Login" id="Login-button"/>
    </form>

    <a asp-page="ForgotPasswordPage">Forgot Password?</a>

</div>