<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MediaBazaarSite</title>
    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> *@
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MediaBazaarSite.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav>
            <div class="logo-con">
                <img src="~/Images/mediabazaar-high-resolution-logo-transparent.png" /></a>
            </div>
            @if (User.Identity.IsAuthenticated)
            {
                <div class="nav-links-con">
                    <div id="countdown"></div>

                    <a asp-page="Index">Home</a>
                    <a asp-page="Profile">Profile</a>
                    <a asp-page="WorkSchedule">Schedule</a>
                    <a asp-page="Products">Products</a>
                    <a asp-page="Logout">Logout</a>
                </div>
            }
            else
            {
                <div class="nav-links-con">
                    <a asp-page="Login">Login</a>
                </div>
            }
        </nav>
    </header>
    <div class="main-container">
        <main role="main" class="main">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="privacy-con">
            &copy; 2023 - MediaBazaarSite - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>